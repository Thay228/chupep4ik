package main

import (
	"fmt"
)

func mergeMaps(m1, m2 map[string]int) map[string]int {
	for ki := range m1 {
		m2[ki] = m1[ki] + m2[ki]
	}
	return m2
}

func main() {
	m1 := map[string]int{"apple": 5, "banana": 3}
	m2 := map[string]int{"banana": 2, "orange": 4}
	fmt.Println(mergeMaps(m1, m2)) // map[apple:5 banana:5 orange:4]
}
