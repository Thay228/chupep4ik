package main

import "fmt"

func sumToN(n int) int {
	c := 0
	for i := 1; i <= n; i++ {
		c += i
	}

	return c
}

func main() {
	fmt.Println(sumToN(5))  // 15 (1 + 2 + 3 + 4 + 5)
	fmt.Println(sumToN(10)) // 55

}
