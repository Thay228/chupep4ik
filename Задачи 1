func safeFunction(f func()) {
	defer func() {
		if r := recover(); r != nil {
			fmt.Println("–û—à–∏–±–∫–∞:", r)
		}
	}()
	f()
}

func main() {
	safeFunction(func() {
		fmt.Println("–í—ã–ø–æ–ª–Ω—è–µ–º –∫–æ–¥...")
		//panic("—á—Ç–æ-—Ç–æ –ø–æ—à–ª–æ –Ω–µ —Ç–∞–∫")
		//fmt.Println("–í—Å—ë —á—ë—Ç–∫–æ –±—Ä–∞—Ç")
		x := 0
		fmt.Println(15 / x)
	})
}
