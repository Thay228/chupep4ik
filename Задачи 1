package main

import (
	"fmt"
)

func swap(a, b *int) {
	*a, *b = *b, *a
}

func main() {
	x, y := 10, 20
	swap(&x, &y)
	fmt.Println(x, y) // 20 10
	swap(&x, &y)
	fmt.Println(x, y) // 10 20

}
