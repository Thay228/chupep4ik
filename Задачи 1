package main

import (
	"fmt"
)

func invertMap(m map[string]int) map[int]string {
	n := map[int]string{}
	for i, y := range m {
		n[y] = i
	}
	return n
}

func main() {
	m := map[string]int{"a": 1, "b": 2, "c": 1}
	fmt.Println(invertMap(m)) // map[1:"a" –∏–ª–∏ "c", 2:"b"]
}
