package main

import (
	"fmt"
)

func sequenceGenerator() func() int {
	k := 0
	return func() int {
		k += 1
		return k
	}
}

func main() {
	next := sequenceGenerator()
	fmt.Println(next()) // 1
	fmt.Println(next()) // 2
	fmt.Println(next()) // 3

}
