import (
	"fmt"
)

func safeDivide(a, b int) (re int) {
	defer func() {
		if r := recover(); r != nil {
			re = 0
		}
	}()

	return a / b
}

func main() {
	fmt.Println(safeDivide(10, 2)) // 5
	fmt.Println(safeDivide(10, 0)) // 0 (–≤–º–µ—Å—Ç–æ –ø–∞–Ω–∏–∫–∏)
}
